<div class="container">
    <div class="jumbotron">
        <h1>Salt Lake Tribune</h1>
        <h3>Articles pulled from Salt Lake Tribune's Website</h3>
        <a href="/scrape"> <button type="button" class="btn btn-danger scrape"> Scrape for Articles </button></a>
    </div>
    <div class="article-container">

        {{#each Article}}
        <div class="row">

            <div class="panel panel-primary">
                <div class="panel-heading">{{this.title}}
                    <a href="/notes/{{this._id}}">
                        <button type="button" class="btn btn-warning save-article">Notes</button> </a>
                </div>
                <div class="panel-body">
                    <a href="{{this.link}}" target="_blank"> {{this.link}}</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

</div>